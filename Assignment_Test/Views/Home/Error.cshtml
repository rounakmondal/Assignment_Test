@{
    ViewBag.Title = "Error";
}

<div class="container d-flex justify-content-center align-items-center" style="height: 100vh;">
    <div class="card text-center shadow-lg p-5">
        <h2 class="text-danger">Oops! Something went wrong.</h2>
        <p class="text-muted">Sorry, there was an error processing your request.</p>

        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger">
                <strong>Error:</strong> @ViewBag.ErrorMessage
            </div>
        }

        <a href="@Url.Action("Upload", "Import")" class="btn btn-primary mt-3">Go Back to Home</a>
    </div>
</div>
