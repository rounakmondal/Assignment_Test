@{
    ViewBag.Title = "Import Result";
}

<div class="container d-flex justify-content-center align-items-center" style="height: 100vh;">
    <div class="card shadow-lg p-4 text-center" style="max-width: 500px; border-radius: 10px;">
        <div class="card-body">
            <div class="mb-3">
                <i class="fas fa-check-circle text-success" style="font-size: 50px;"></i>
            </div>
            <h2 class="text-success fw-bold">Success!</h2>
            <p class="text-muted">Your data has been successfully imported into the database.</p>
            <a href="@Url.Action("Upload","Import")" class="btn btn-primary mt-3 px-4 py-2" style="border-radius: 25px;">
                <i class="fas fa-home"></i> Return to Home
            </a>
        </div>
    </div>
</div>


<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
